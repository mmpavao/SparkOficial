{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "I18n: Scan for hardcoded strings",
      "type": "shell",
      "command": "npm run i18n:scan",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "I18n: Auto-fix strings",
      "type": "shell",
      "command": "npm run i18n:fix",
      "group": "build"
    },
    {
      "label": "I18n: Start real-time monitoring",
      "type": "shell",
      "command": "npm run i18n:watch",
      "isBackground": true,
      "group": "build"
    }
  ]
}